            <Button layoutX="14.0" layoutY="246.0" mnemonicParsing="false" onAction="#btnTemizle" prefHeight="25.0" prefWidth="149.0" text="Temizle" />
         </children>
      </AnchorPane>
   </children>
</VBox>

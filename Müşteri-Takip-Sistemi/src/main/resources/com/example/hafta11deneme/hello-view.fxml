         <children>
            <TextField fx:id="txtAd" layoutX="14.0" layoutY="39.0" promptText="Adı" />
            <TextField fx:id="txtMail" layoutX="14.0" layoutY="126.0" promptText="Mail" />
            <TextField fx:id="txtSoyad" layoutX="14.0" layoutY="82.0" promptText="Soyadı" />
            <TableView fx:id="tblMusteriler" layoutX="221.0" layoutY="14.0" prefHeight="200.0" prefWidth="340.0">
              <columns>
                <TableColumn fx:id="sutunAd" prefWidth="113.0" text="Adı" />
                <TableColumn fx:id="sutunSoyad" prefWidth="88.0" text="Soyadı" />
